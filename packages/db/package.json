{
  "name": "@tireoff/db",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./src/client.ts"
    }
  },
  "scripts": {
    "generate": "prisma generate",
    "generate:local": "dotenv -e ../../.env -- prisma generate",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "studio": "dotenv -e ../../.env -- prisma studio",
    "seed": "dotenv -e ../../.env -- npx tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "lint": "eslint ."
  },
  "dependencies": {
    "@prisma/client": "^6.2.1"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prisma": "^6.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
